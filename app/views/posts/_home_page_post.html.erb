<div>
  <%= render 'users/user_post_heading', user: post.user%> says:
  <div>
    <%= post.body %>
  </div>

  <div>
    <ul>
      <% post.replies.each do |reply| %>
        <li>
          <%= render 'users/user_post_heading', user: post.user%> replied: <%= reply.body %>
        </li>
      <% end %>
    </ul>
  </div>
</div>